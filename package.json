  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm public/*.map public/main.js public/main.css",
    "buildClient:esbuild": "esbuild --bundle --minify --target=es6 --outdir=client/public client/src/main.jsx",
    "buildClient:tailwind": "npx tailwindcss -i ./client/src/main.css -o ./client/public/app.css --minify",
    "watch:esbuild": "esbuild --watch --bundle --sourcemap --target=es6 --outdir=client/public client/src/main.jsx",
    "watch:tailwind": "npx tailwindcss -i ./client/src/main.css -o ./client/public/app.css --watch",
    "client:dev": "npm-run-all --parallel watch:*",
    "server:dev": "nodemon --watch api dev",
    "server:prod": "node api/server.js prod"
  },
